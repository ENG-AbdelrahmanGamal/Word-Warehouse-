<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
<variable
    name="words"
    type="com.example.wordbalance.MyWord" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_20sdp"
        android:padding="@dimen/_50sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:outlineSpotShadowColor="@color/black"
        android:layout_height="match_parent"
        tools:context=".items_newWords"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:background="@drawable/buttun"
            android:foregroundGravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_im_rating"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="fitXY"
                android:layout_width="@dimen/_100sdp"
                android:src="@drawable/whiterating"
                android:layout_height="@dimen/_50sdp"
                android:foregroundGravity="center" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_tv_count"
                app:layout_constraintTop_toTopOf="@id/item_im_rating"
                app:layout_constraintBottom_toBottomOf="@id/item_im_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/item_im_rating"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:textSize="@dimen/_20ssp"
                android:text="=@{words.name}"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_tv_categor"
                app:layout_constraintTop_toTopOf="@id/item_im_rating"
                app:layout_constraintBottom_toBottomOf="@id/item_im_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/item_im_rating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                android:text="@={words.categories}"
                />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_tv_word"
                app:layout_constraintTop_toBottomOf="@+id/item_im_rating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@={words.name}"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:textSize="@dimen/_16ssp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_tv_description_word"
                app:layout_constraintTop_toBottomOf="@+id/item_tv_word"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@={words.description}"
                android:textAlignment="gravity"
                android:textStyle="italic"
                android:textSize="@dimen/_11ssp"
                android:padding="@dimen/_11ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>